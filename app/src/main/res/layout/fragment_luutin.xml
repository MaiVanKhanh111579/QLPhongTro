<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_luutin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tv_saved_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tin đã lưu"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Hình ảnh empty state -->
    <ImageView
        android:id="@+id/iv_empty_saved"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_binocular_man"
        android:contentDescription="Empty saved posts"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toBottomOf="@id/tv_saved_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dòng title nhỏ bên dưới ảnh -->
    <TextView
        android:id="@+id/tv_empty_saved_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Lưu lại tin đăng bạn quan tâm"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/iv_empty_saved"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dòng mô tả nhỏ -->
    <TextView
        android:id="@+id/tv_empty_saved_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nhấn vào biểu tượng trái tim khi lướt tìm kiếm để lưu lại tin đăng."
        android:textSize="14sp"
        android:textColor="@color/grey8080"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_empty_saved_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
