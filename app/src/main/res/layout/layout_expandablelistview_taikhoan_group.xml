<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/img_ic_layoutexpandablelistview_taikhoan_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_setting_black"
        android:layout_alignParentStart="true"
        android:layout_marginRight="15dp"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/txt_layoutexpandablelistview_taikhoan_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_ic_layoutexpandablelistview_taikhoan_group"
        android:text="Tiện ích"
        android:textColor="@color/black"
        android:textSize="17dp"
        tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />
    <ImageView
        android:id="@+id/img_ic_layoutexpandablelistview_taikhoan_group_arrowdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrowdown_black"
        android:layout_alignParentEnd="true"
        tools:ignore="ContentDescription"/>
</RelativeLayout>